FROM ubuntu:18.04
LABEL maintainer="https://suk.kr"

ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update
RUN apt-get install -y apache2
RUN apt-get install -y software-properties-common
RUN add-apt-repository -y ppa:ondrej/php
RUN apt-get update
RUN apt-get install -y php-fpm

RUN echo "AddType application/x-httpd-php .php .htm .html .inc" >> /etc/apache2/apache2.conf
RUN echo "AddType application/x-httpd-php-source .phps" >> /etc/apache2/apache2.conf

EXPOSE 80

CMD ["apachectl", "-D", "FOREGROUND"]

#docker buildx build --platform linux/amd64 -f Dockerfile-php -t docker.dyhs.kr/dy-ctf/php-build:latest --push .